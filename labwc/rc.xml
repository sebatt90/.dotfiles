        <x>center</x>
        <y>center</y>
      </position>
    </keybind>
  -->
  </keyboard>

  <mouse>
    <default />
    <!-- Show a custom menu on desktop right click -->
    <context name="Root">
      <mousebind button="Right" action="Press">
        <action name="ShowMenu" menu="some-custom-menu" />
      </mousebind>

    </context>

    <!-- Regarding windows -->
    <context name="Frame">
      <!-- Resize window with super -->
      <mousebind button="W-Right" action="Drag">
	<action name="Resize" />
      </mousebind>
      <!-- Move window with super like a sane human being -->
      <mousebind button="W-Left" action="Drag">
        <action name="Move" />
      </mousebind>
    </context>
  </mouse>

</labwc_config>
